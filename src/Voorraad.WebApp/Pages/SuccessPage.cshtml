@page
@model Voorraad.WebApp.Pages.SuccessPageModel
@{
    ViewData["Title"] = "Success Page";
}

<div class="text-center">
    <h1 class="display-4">Success!</h1>
    @if (TempData["MonteurResults"] != null)
    {
        var monteurResultsJson = TempData["MonteurResults"] as string;
        var monteurResults = Newtonsoft.Json.JsonConvert.DeserializeObject<List<string[]>>(monteurResultsJson);

        <h2>Results from Monteur Page:</h2>
        <div class="text-center">
            <table class="mx-auto table table-hover table-bordered" border="1">
                <thead>
                    <tr class="mx-auto" border="1">
                        <th>Package ID</th>
                        <th>Product ID</th>
                        <th>Mechanic ID</th>
                        <th>Quantity</th>
                        <th>Note</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in monteurResults)
                    {
                        <tr class="mx-auto" border="1">
                            <td>@result[0]</td>
                            <td>@result[1]</td>
                            <td>@result[2]</td>
                            <td>@result[3]</td>
                            <td>@result[5]</td>
                        </tr> 
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No results from Monteur Page.</p>
    }
</div>

